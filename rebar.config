{minimum_otp_vsn, "18.1"}.

{erl_opts, [
            debug_info,
            warnings_as_errors,
            {parse_transform, lager_transform}
           ]}.

{deps, [
        {msgpack, {git, "https://github.com/msgpack/msgpack-erlang.git", {tag, "0.5.0"}}},
        {jsx, {git, "https://github.com/talentdeficit/jsx.git", {tag, "v2.8.0"}}},
        {uri, {git, "https://github.com/erlware/uri.git", {ref, " 91f6b71"}}},
        {lager, {git, "https://github.com/basho/lager.git", {tag, "2.2.2"}}}
       ]
}.

{plugins, [
           {rebar3_lint, {git, "https://github.com/bwegh/rebar3_lint.git", {branch, "master"}}},
           rebar3_proper,
           rebar3_auto,
           rebar3_run
          ]}.

{profiles, [
            {test, [
                    {cover_enabled, true}
                   ]}
           ]}.

{elvis, [
         #{dirs => ["."],
           filter => "elvis.config",
           ruleset => elvis_config },
         #{dirs => ["src"],
           filter => "*.erl",
           ruleset => erl_files },
         #{dirs => ["."],
           filter => "Makefile",
           ruleset => makefiles },
         #{dirs => ["."],
           filter => "rebar.config",
           ruleset => rebar_config }
        ] }.
